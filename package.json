    "@heroui/date-input": "^2.3.27",
    "@heroui/date-picker": "^2.3.28",
    "@heroui/input": "^2.4.28",
    "@heroui/radio": "^2.3.27",
    "@heroui/react": "^2.8.5",
    "@heroui/select": "^2.4.28",
    "@heroui/slider": "^2.4.24",
    "@heroui/spinner": "^2.2.24",
    "@heroui/switch": "^2.2.24",
    "@heroui/system": "^2.4.23",
    "@rachelallyson/heroui-font-picker": "^1.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "cypress": "^15.5.0",
    "cypress-terminal-report": "^7.3.3",
    "eslint": "^9.38.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^27.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@heroui/button": ">=2 <3",
    "@heroui/checkbox": ">=2 <3",
    "@heroui/date-input": ">=2 <3",
    "@heroui/date-picker": ">=2 <3",
    "@heroui/input": ">=2 <3",
    "@heroui/radio": ">=2 <3",
    "@heroui/react": ">=2 <3",
